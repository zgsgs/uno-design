{
  "$schema": "https://turborepo.org/schema.json",
  "pipeline": {
    "dev": {
      "dependsOn": ["^dev"]
    },
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**"]
    },
    "test": {
      "dependsOn": ["build"],
      "outputs": [],
      "inputs": ["src/**/*.tsx", "src/**/*.ts", "test/**/*.ts", "test/**/*.tsx"]
    },
    "type:check": {
    },
    "lint:fix": {
    },
    "plop:comp": {
    },
    "deploy": {
      "dependsOn": ["build", "test", "lint:fix"],
      "outputs": []
    }
  }
}
