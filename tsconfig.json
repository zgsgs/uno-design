{
  "extends": "@uno-design/shared/configs/tsconfig.base.json",
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": ["ESNext", "DOM"],
    "strict": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "baseUrl": ".",
    "sourceMap": true,
    "jsx": "preserve"
  },
  "include": [
    "packages/**/*.ts",
    "packages/**/*.d.ts"
  ]
}
