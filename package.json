{
  "name": "uno-design-monorepo",
  "type": "module",
  "version": "0.0.0",
  "private": true,
  "workspaces": [
    "packages/*",
    "docs",
    "start"
  ],
  "packageManager": "pnpm@7.5.0",
  "engines": {
    "pnpm": ">=7.5",
    "node": ">= 16"
  },
  "scripts": {
    "prepare": "husky install",
    "dev": "turbo dev",
    "dev:docs": "pnpm -C docs dev",
    "play": "pnpm --filter play dev",
    "build": "pnpm -r --parallel -F \"./packages/{preset-uno,resolver,shared,uno-design}\" run build",
    "build:all": "turbo build",
    "preview": "turbo preview",
    "test": "vitest",
    "test:all": "turbo test",
    "lint": "turbo lint",
    "lint:fix": "lint-staged",
    "type:check": "turbo type:check",
    "new": "pnpm -C packages/cli new",
    "commit": "cz",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s",
    "coverage": "vitest --coverage",
    "clean": "rimraf dist"
  },
  "dependencies": {
    "@uno-design/web-vue": "workspace:*",
    "vue": "^3.2.41"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^0.27.0",
    "@commitlint/cli": "^17.1.2",
    "@commitlint/config-conventional": "^17.1.0",
    "@juln/change-case": "^1.0.0",
    "@types/file-saver": "^2.0.5",
    "@types/fs-extra": "^9.0.13",
    "@types/node": "^18.11.8",
    "@uno-design/shared": "workspace:*",
    "@vitejs/plugin-vue": "^3.2.0",
    "@vitejs/plugin-vue-jsx": "^3.0.0",
    "@vitest/coverage-c8": "^0.25.2",
    "@vue/test-utils": "^2.2.1",
    "commitizen": "^4.2.5",
    "cz-conventional-changelog": "^3.3.0",
    "cz-customizable": "^7.0.0",
    "eslint": "^8.26.0",
    "execa": "^6.1.0",
    "file-saver": "^2.0.5",
    "fs-extra": "^10.1.0",
    "happy-dom": "^7.6.6",
    "husky": "^8.0.1",
    "jszip": "^3.10.1",
    "lint-staged": "^13.0.3",
    "prism-theme-vars": "^0.2.4",
    "rimraf": "^3.0.2",
    "rollup-plugin-visualizer": "^5.8.3",
    "sass": "^1.55.0",
    "standard-version": "^9.5.0",
    "super-ejs": "^1.0.3",
    "turbo": "^1.6.2",
    "typescript": "^4.6.4",
    "unocss": "^0.46.4",
    "unplugin-icons": "^0.14.13",
    "unplugin-vue-components": "^0.22.9",
    "unplugin-vue-define-options": "^1.3.3",
    "unplugin-vue-macros": "^0.16.3",
    "unplugin-vue-setup-extend-plus": "^0.3.2",
    "vconsole": "^3.14.7",
    "vite": "^3.2.0",
    "vite-plugin-compression": "^0.5.1",
    "vite-plugin-dts": "^1.6.6",
    "vite-plugin-html": "^3.2.0",
    "vite-plugin-mock": "^2.9.6",
    "vite-plugin-svg-icons": "^2.0.1",
    "vite-svg-loader": "^3.6.0",
    "vitest": "^0.24.4",
    "vue-tsc": "^1.0.9"
  },
  "lint-staged": {
    "*.{vue,js,jsx,ts,tsx,json}": "eslint . --fix"
  },
  "eslintConfig": {
    "extends": "@antfu"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  }
}
